{% extends 'base.html.twig' %}
{% block title 'Profile' %}
{% block body %}
	<div class="row">
		<div class="col-md-10 mx-auto text-center  border border-dashed">
			<h1>Profile</h1>
			<img style="max-width: 250px;" src={{ vich_uploader_asset(app.user, 'imageFile') }}>
			<p>{{ app.user.email }}</p>
			<h2>{{ app.user.nom ~" "~ app.user.prenom }}</h2>
			<p>Account created on
				{{ app.user.createdAt|date }}</p>
			<div class="container text-center">
				<div class="row">
					<h3>My Cars</h3>
					{% for voiture in app.user.voitures %}
						<article class="col-4">
							<h3>
								<a href={{ path('app_voiture_details', {id: voiture.id} ) }}>{{ voiture.nom }}</a>
							</h3>

							<img style="max-width: 250px;" height="200" src={{ vich_uploader_asset(voiture, 'imageFile') }}>


						</article>

					{% else %}
						<p>
							Sorry, no cars yet
						</p>
					{% endfor %}
				</div>
			</div>
			<p>
				<a href="{{ path('app_account_edit') }}">Edit Account</a>
			</p>
    <p>
    <a href="{{ path('app_voiture_index') }}">back to list</a>
</p>
		</div>
	</div>
{% endblock %}
